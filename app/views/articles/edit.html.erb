<div class="container">
  <h1 class="text-center">Edit Article</h1>
  <%= form_with model: @article, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :title, "Title", class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter the updated title' %>
    </div>
    <div class="mb-4">
      <%= form.label :content, "Content", class: 'form-label' %>
      <%= form.text_area :content, class: 'form-control', rows: 8, placeholder: 'Update the content here...' %>
    </div>
    <div class="d-flex justify-content-between">
      <%= form.submit 'Update Article', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', articles_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
